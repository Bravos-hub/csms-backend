{
  "name": "evzone-backend",
  "prisma": {
    "seed": "tsx ./prisma/seed.ts"
  },
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "prebuild": "npm run prisma:check",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"packages/**/*.ts\"",
    "start": "nest start",
    "prestart:dev": "npm run prisma:check",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "start:api": "nest start api",
    "start:ocpp": "nest start ocpp-gateway",
    "start:worker": "nest start worker",
    "prisma:refresh": "node scripts/prisma-refresh.js",
    "prisma:check": "node scripts/prisma-check.js",
    "seed": "prisma db seed",
    "lint": "eslint \"{src,apps,packages,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.12",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-ws": "^11.1.12",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.5",
    "@prisma/adapter-pg": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@types/streamifier": "^0.1.2",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cloudinary": "^2.9.0",
    "cookie-parser": "^1.4.7",
    "fastify-socket.io": "^5.1.0",
    "h3-js": "^4.4.0",
    "ioredis": "^5.9.2",
    "kafkajs": "^2.2.4",
    "nodemailer": "^7.0.12",
    "pg": "^8.17.2",
    "redis": "^5.10.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.3",
    "streamifier": "^0.1.1",
    "twilio": "^5.11.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@nestjs/cli": "^11.0.16",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "prettier": "^3.4.2",
    "prisma": "^5.22.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/packages/"
    ],
    "moduleNameMapper": {
      "^@app/core$": "<rootDir>/packages/domain/src",
      "^@app/core/(.*)$": "<rootDir>/packages/domain/src/$1",
      "^@app/domain$": "<rootDir>/packages/domain/src",
      "^@app/domain/(.*)$": "<rootDir>/packages/domain/src/$1",
      "^@app/database$": "<rootDir>/packages/db/src",
      "^@app/database/(.*)$": "<rootDir>/packages/db/src/$1",
      "^@app/db$": "<rootDir>/packages/db/src",
      "^@app/db/(.*)$": "<rootDir>/packages/db/src/$1"
    }
  }
}
